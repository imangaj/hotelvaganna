// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Users (Admin/Staff)
model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String
  role      String  @default("STAFF")
  
  assignedTasks HousekeepingTask[] @relation("HousekeepingAssignee")
  pushSubscriptions PushSubscription[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// Properties/Hotels
model Property {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  address     String
  city        String
  country     String
  zipCode     String?
  phone       String?
  email       String?
  
  rooms       Room[]
  bookings    Booking[]
  channels    Channel[]
  housekeepingTasks HousekeepingTask[]
  maintenanceRequests MaintenanceRequest[]
  dailyRates  DailyRate[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("properties")
}

// Room Types and Rooms
model RoomType {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  maxGuests   Int
  basePrice   Float
  
  rooms       Room[]
  dailyRates  DailyRate[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("room_types")
}

model Room {
  id          Int     @id @default(autoincrement())
  roomNumber  String
  propertyId  Int
  roomTypeId  Int
  status      String  @default("AVAILABLE")
  breakfastIncluded Boolean @default(false)
  breakfastPrice    Float   @default(0)
  
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  roomType    RoomType @relation(fields: [roomTypeId], references: [id])
  
  bookings    Booking[]
  prices      DailyPrice[]
  housekeepingTasks HousekeepingTask[]
  maintenanceRequests MaintenanceRequest[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([propertyId, roomNumber])
  @@map("rooms")
}

// Guest Information
model Guest {
  id          Int     @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String
  phone       String?
  country     String?
  
  bookings    Booking[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("guests")
}

// Guest Portal Accounts
model GuestAccount {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  firstName    String?
  lastName     String?
  phone        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  passwordResetTokens GuestPasswordResetToken[]

  @@map("guest_accounts")
}

model GuestPasswordResetToken {
  id              Int          @id @default(autoincrement())
  token           String       @unique
  guestAccountId  Int
  guestAccount    GuestAccount @relation(fields: [guestAccountId], references: [id], onDelete: Cascade)
  expiresAt       DateTime
  createdAt       DateTime     @default(now())

  @@map("guest_password_reset_tokens")
}

// Bookings
model Booking {
  id              Int       @id @default(autoincrement())
  bookingNumber   String    @unique
  propertyId      Int
  roomId          Int
  guestId         Int
  
  checkInDate     DateTime
  checkOutDate    DateTime
  numberOfGuests  Int
  
  totalPrice      Float
  paidAmount      Float @default(0)
  paymentStatus   String @default("PENDING")
  bookingStatus   String @default("CONFIRMED")
  
  source          String
  sourceBookingId String?

  breakfastCount  Int     @default(0)
  parkingIncluded Boolean @default(false)
  
  notes           String?
  
  property        Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  room            Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  guest           Guest @relation(fields: [guestId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([propertyId])
  @@index([roomId])
  @@index([checkInDate, checkOutDate])
  @@map("bookings")
}

// Dynamic Pricing
model DailyPrice {
  id        Int     @id @default(autoincrement())
  roomId    Int
  date      DateTime
  price     Float
  
  room      Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([roomId, date])
  @@map("daily_prices")
}

// Daily Rates (Per Category)
model DailyRate {
  id          Int      @id @default(autoincrement())
  propertyId  Int
  roomTypeId  Int
  date        DateTime
  price       Float
  availableCount Int? // Override for inventory
  isClosed    Boolean @default(false)
  enableBreakfast Boolean @default(true)
  
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  roomType    RoomType @relation(fields: [roomTypeId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([propertyId, roomTypeId, date])
  @@map("daily_rates")
}

// Channel Manager (Integration with Booking.com, Airbnb, etc.)
model Channel {
  id          Int     @id @default(autoincrement())
  propertyId  Int
  name        String
  type        String
  apiKey      String?
  isActive    Boolean @default(true)
  
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  syncs       ChannelSync[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("channels")
}

// Channel Sync Log
model ChannelSync {
  id        Int       @id @default(autoincrement())
  channelId Int
  syncType  String
  status    String
  message   String?
  
  channel   Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@map("channel_syncs")
}

// Hotel Profile (Public Website)
model HotelProfile {
  id            Int      @id @default(autoincrement())
  name          String
  address       String
  city          String?
  country       String?
  phone         String?
  email         String?
  description   String?
  amenities     String?
  checkInTime   String?
  checkOutTime  String?
  policies      String?
  heroImageUrl  String?
  
  // Website Customization
  websiteTitle    String?
  logoUrl         String?
  primaryColor    String?  @default("#2E5D4B") // Forest Green default
  secondaryColor  String?  @default("#C5A059") // Gold default
  footerText      String?
  footerCopyright String?
  
  // Social Media
  facebookUrl     String?
  instagramUrl    String?
  twitterUrl      String?

  // Pro Features (JSON Storage for flexible content: Hero, Map, Features, etc.)
  contentJson     String?  @default("{}")

  updatedAt     DateTime @updatedAt

  @@map("hotel_profile")
}

// Web Push Subscriptions (Admin Dashboard)
model PushSubscription {
  id        Int      @id @default(autoincrement())
  userId    Int?
  endpoint  String   @unique
  p256dh    String
  auth      String
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("push_subscriptions")
}

// Housekeeping Tasks
model HousekeepingTask {
  id              Int      @id @default(autoincrement())
  propertyId      Int
  roomId          Int?     // Optional, task might be general area
  title           String
  description     String?
  status          String   @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, INSPECTED
  priority        String   @default("NORMAL") // LOW, NORMAL, HIGH, URGENT
  assignedTo      String?  // Staff name (Legacy)
  assignedToUserId Int?    // Link to User
  
  property        Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  room            Room?    @relation(fields: [roomId], references: [id])
  assignee        User?    @relation("HousekeepingAssignee", fields: [assignedToUserId], references: [id])
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("housekeeping_tasks")
}

// Maintenance Requests
model MaintenanceRequest {
  id              Int      @id @default(autoincrement())
  propertyId      Int
  roomId          Int?     // Optional
  title           String
  description     String?
  type            String   // ELECTRICAL, PLUMBING, HVAC, APPLIANCE, FURNITURE, OTHER
  status          String   @default("OPEN") // OPEN, ASSIGNED, IN_PROGRESS, COMPLETED, CLOSED
  priority        String   @default("NORMAL") // LOW, NORMAL, HIGH, URGENT
  assignedTo      String?
  
  startDate       DateTime?
  endDate         DateTime?

  estimatedCost   Float?
  actualCost      Float?
  
  property        Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  room            Room?    @relation(fields: [roomId], references: [id])
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("maintenance_requests")
}
